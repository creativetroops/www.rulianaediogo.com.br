{
  "env": {
    "node": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "plugins": ["react", "jsx-a11y", "import"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "semi": [2, "never"],
    "class-methods-use-this": 0,
    "space-before-function-paren": ["error", "never"],
    "func-names": ["error", "never"]
  }
}
